{% extends 'base.html.twig' %}

{% block header_title %}
	<div>
		<a href="{{ path('admin_users_list') }}" class="btn btn-info pull-right my-3">Liste des utilisateurs</a>
	</div>
	<h1>Modifier
		<strong>{{ user.username }}</strong>
	</h1>
{% endblock %}
{% block header_img %}{% endblock %}

{% block body %}

	<div class="row">
		{{ form_start(form, {'action' : path('admin_users_edit', {'id' : user.id})}) }}
		{{ form_widget(form) }}

		<button type="submit" class="btn btn-success pull-right">Modifier</button>
		{{ form_end(form) }}
	</div>
{% endblock %}
